{
    "name": "Pacman Game",
    "image": "mcr.microsoft.com/devcontainers/python:3",
    "features": {},
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python"
            ],
            "settings": {
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true
            }
        }
    },
    "postCreateCommand": "pip install pygame",
    "forwardPorts": [8000],
    "portsAttributes": {
        "8000": {
            "label": "Game Port",
            "onAutoForward": "notify"
        }
    }
}
